<div class="jumbotron">
  <div class="container-fluid">
    <h1>New Eats</h1>
    <p>
      <i>From EATER: Los Angeles</i>
    </p>
    <br>
    <br>
    <p>
      <strong>Saved Articles</strong>
    </p>
  </div>
</div>


<div class="container">
  <div class="row" id="article-entry">

    {{#each articles}}

      <div class="col-lg-12 ">
        <div class="panel panel-default">
          <div class="panel-heading">
            <a href="{{this.link}}"><h3 class="panel-title pull-left">{{this.title}}</h3></a>
            <button type="button" class=" btn btn-primary pull-right note-article" data-toggle="modal" data-target="#{{this._id}}" data-id="{{this._id}}">Note Article</button>
            <button type="button" class="btn btn-warning pull-right remove-saved" data-id="{{this._id}}">Remove Saved</button>
            <div class="clearfix"></div>
          </div>
          <div class="panel-body">
            <p>{{this.blurb}}</p>
          </div>
        </div>
      </div>

      {{!-- Modal for article ^^^ --}}
      <div class="modal fade" id="{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">

            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h2 class="text-center save-title" id="collect-modal-input">{{this.title}}</h2>
            </div>
            <form>
              <div class="modal-body">
                <label for="message-text" class="control-label">Notes:</label>
                <textarea class="form-control save-body" rows="8" id="{{this._id}}">{{this.body}}</textarea>
              </div>
            </form>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary save-note-change">Save changes</button>
            </div>

          </div>
        </div>
      </div>

    {{/each}}

  </div>
</div>
